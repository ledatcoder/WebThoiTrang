@using System.Globalization
@model ShoppingCart


@{
    var a = @Model.Product.ListPrice;
    var b = Model.Product.Price6;
    var c = a - b;
    var culture = new CultureInfo("en-US");
}
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-white text-uppercase">@Model.Product.Name</h4>
                    <p class="text-white-50 fw-semibold mb-0">@Model.Product.Brand</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Trở Lại Trang Chủ</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-5 offset-lg-1 text-center mb-3">
                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0)
                        {
                            <div id="carouselExampleIndicators" class="carousel  slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">

                                    @foreach (var imageWithIndex in
                                   Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                                class="@(imageWithIndex.Index==0?"active":"")" aria-current="true" aria-label="Slide 1"></button>
                                    }


                                </div>
                                <div class="carousel-inner ">
                                    @foreach (var imageWithIndex in
                                   Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <div class="@(imageWithIndex.Index==0?"carousel-item active":"carousel-item" )">
                                            <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                        }

                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <div class="row ps-2">
                            <h6 class="text-warning fw-bold  pb-2">
                               Giá Giảm Sóc Lên Đến: &nbsp
                                <span class="text-decoration-line-through">
                                    @c.ToString("#,##0.##", culture) VNĐ
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 text-warning fw-bold border-bottom">
                                <div class="text-warning fw-bold fw-semibold">Số Lượng</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3  border-bottom">
                                <div class=" fw-semibold text-warning fw-bold text-warning fw-bold">1-2</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3 border-bottom">
                                <div class=" fw-semibold text-warning fw-bold">2-5</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3  border-bottom">
                                <div class=" text-opacity-50 fw-semibold text-warning fw-bold">6+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2 mb-5">
                            <div class="p-1 col-3 col-lg-2  text-warning fw-bold">
                                <div>Giá</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3  text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("#,##0.##", culture) VNĐ</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3  text-warning fw-bold">
                                <div>@Model.Product.Price5.ToString("#,##0.##", culture) VNĐ</div>
                            </div>
                            <div class="p-1 col-3 col-lg-3  text-warning fw-bold">
                                <div>@Model.Product.Price6.ToString("#,##0.##", culture) VNĐ</div>
                            </div>
                        </div>
                        <div class="row pl-2 mb-5 ">
                            <div class="col-md-5">
                                <div class="input-group mb-3 col-lg-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Số Lượng
                                    </span>
                                    <input asp-for="Count" type="number" value="1" min="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group mb-3">
                                    <select asp-for="Size" class="form-select" aria-label="Default select example" >
                                        <option selected value="S">Chọn Cở</option>
                                        <option value="S">S</option>
                                        <option value="M">M</option>
                                        <option value="L">L</option>
                                        <option value="XL">XL</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-2 p-4 ">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Thêm Vào Giỏ Hàng
                                </button>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="col-12 col-lg-12 offset-lg-1">
                        <h4>Mô Tả Sản Phẩm</h4>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


